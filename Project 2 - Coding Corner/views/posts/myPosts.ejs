                  <form action="/posts/<%#=p._id%>?_method=DELETE" method="POST">
                    <button id=<%#=p._id%> type="submit" class="btn white-text">DELETE</button>
                  </form>
                </td> -->
              </tr>
            <% }); %>
        </tbody>
      </table>

  <% } else { %>
    <p> PLEASE LOG IN TO VIEW YOUR POSTS</p>
<% } %>

